
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Enlink - Admin Dashboard Template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Style/assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/Style/assets/css/app.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.11.0/dist/sweetalert2.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('~/Style/assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <img class="img-fluid" alt="" src="~/Style/assets/images/logo/logo.png">
                                        <h2 class="m-b-0">Sign In</h2>
                                    </div>
                                    <form onsubmit="return false;">
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="userName">Username:</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                <input type="text" class="form-control" id="Username" placeholder="Username">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password:</label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control" id="Password" placeholder="Password">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <span class="font-size-13 text-muted">
                                                    Don't have an account?
                                                    <a class="small" href="/Login/Register"> Signup</a>
                                                </span>
                                                <button class="btn btn-primary" id="btnLogin">Sign In</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex p-h-40 justify-content-between">
                   
                </div>
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/Style/assets/js/vendors.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.11.0/dist/sweetalert2.all.min.js"></script>
    <!-- page js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Core JS -->
    <script src="~/Style/assets/js/app.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                Login();
            });
        });

        function Login() {
            var UserName = $("#Username").val().trim();
            var PassWord = $("#Password").val().trim();
            $.ajax({
                url: '/Login/LoginAccount',
                type: 'POST',
                data: JSON.stringify({
                    username: UserName,
                    password: PassWord
                }),
                contentType: 'application/json',
                success: function (response) {
                    if (response.status === "Đăng nhập thành công") {
                        Swal.fire({
                            icon: 'success',
                            title: response.status,
                            showConfirmButton: false,
                            timer: 2000,
                        }).then(function () {
                            window.location.href = "/Home/TrangChu";
                        });;
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: response.status,
                            showConfirmButton: false,
                            timer: 2000,
                        })
                    }
                },
            });
        }

    </script>

</body>

</html>