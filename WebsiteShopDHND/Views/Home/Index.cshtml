@{
    ViewBag.Title = "Home Page";
}

<div class="main-content">
    <div class="page-header">
        <div class="card">
            <div class="card-body">
                <h3 style="text-align:center; font-weight:bold">DANH MỤC SẢN PHẨM</h3>
                <div class="row m-b-30">
                    <div class="col-lg-2 text-right">
                        <button class="btn btn-primary btn-tone m-r-5" data-toggle="modal" data-target="#exampleModal">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm mới danh mục sản phẩm</span>
                        </button>
                    </div>
                    <div class="col-lg-3">
                        <div class="input-group">
                            <label class="text-start" style="font-weight:bold">Search :</label>
                            <input type="search" class="form-control" id="SearchBox" placeholder="Nhập tên học sinh cần tìm ..." />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="anticon anticon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <!--Thêm mới Danh mục-->
                    <div class="modal fade" id="exampleModal">
                        <div class="modal-dialog">
                            <div class="modal-content" style="width: 146%; margin-left: -70px; ">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">DANH MUC SAN PHAM</h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <i class="anticon anticon-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="container mt-5" style=" margin-right: 100px; ">
                                        <div class="border rounded p-4 shadow" style="width: 666px; margin-top: -55px;">
                                            <h1 class="text-center mb-4" style="font-weight: bold; padding-top: 15px; font-size: 38px;">TIẾP NHẬN DANH MỤC SẢN PHẨM</h1>
                                            <div class="row justify-content-center">
                                                <div class="col-md-9">
                                                    <form id="quadratic-form" action="/Home/AddCategory" method="post" style="width: 140%; margin-left: -92px;">
                                                        <div class="form-title" style="color: blue; margin-bottom: -10px;">Thông tin sản phẩm</div>
                                                        <div class="form-group form-inline align-items-center border rounded p-4">
                                                            <label class="text-start">Tên danh mục :</label>
                                                            <input type="text" name="TenDanhMuc" id="TenDanhMuc" class="form form-control" />
                                                            <div>
                                                                <p id="TenDanhMucError" class="text-danger" style="padding-left: 113px;"></p>
                                                            </div>
                                                            
                                                        </div>

                                                        <div style="float: right; padding-bottom: 35px;">
                                                            <button type="button" class="btn btn-primary btn-tone m-r-5" style="width: 122px; height: 42px;" id="btnAdd">
                                                                <i class="anticon anticon-diff"></i>
                                                                Thêm mới
                                                            </button>
                                                            <button type="reset" class="btn btn-warning btn-tone m-r-5" style="width: 122px; height: 42px;" id="btnReset">
                                                                <i class="anticon anticon-redo"></i>
                                                                Reset
                                                            </button>
                                                            <button type="reset" class="btn btn-danger btn-tone m-r-5" style="width: 122px; height: 42px;" data-dismiss="modal" id="btnExit">
                                                                <i class="anticon anticon-logout"></i>
                                                                Thoát
                                                            </button>
                                                        </div>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Edit danh mục-->
                    <div class="modal fade" id="EditModal">
                        <div class="modal-dialog">
                            <div class="modal-content" style="width: 146%; margin-left: -70px;">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">DANH MỤC SẢN PHẨM</h5>
                                    <button type="button" class="close" data-dismiss="modal">
                                        <i class="anticon anticon-close"></i>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="container mt-5" style="margin-right: 100px;">
                                        <div class="border rounded p-4 shadow" style="width: 666px; margin-top: -55px;">
                                            <h1 class="text-center mb-4" style="font-weight: bold; padding-top: 15px; font-size: 38px;">SỬA ĐỔI DANH MỤC SẢN PHẨM</h1>
                                            <div class="row justify-content-center">
                                                <div class="col-md-9">
                                                    <form id="edit-form" style="width: 140%; margin-left: -92px;">
                                                        <div class="form-title" style="color: blue; margin-bottom: -10px;">Thông tin danh mục</div>
                                                        <div class="form-group form-inline align-items-center border rounded p-4">
                                                            <input type="hidden" id="EditMaDanhMuc" name="EditMaDanhMuc" class="form form-control" style="width: 170px; margin-right: 18px;" />
                                                            <input type="hidden" id="EditTimeStart" name="EditTimeStart" class="form form-control" style="width: 170px; margin-right: 18px;" />
                                                            <label class="text-start">Tên danh mục:</label>
                                                            <input type="text" id="EditTenDanhMuc" name="EditTenDanhMuc" class="form form-control" />
                                                            <p id="EditHoTenError" class="text-danger" style="padding-left: 379px;"></p>
                                                        </div>

                                                        <div style="float: right; padding-bottom: 35px;">
                                                            <button type="button" class="btn btn-primary btn-tone m-r-5" style="width: 122px; height: 42px;" id="btnSaveEdit">
                                                                <i class="anticon anticon-form"></i>
                                                                Sửa
                                                            </button>
                                                            <button type="button" class="btn btn-danger btn-tone m-r-5" style="width: 122px; height: 42px;" data-dismiss="modal" id="btnExitEdit">
                                                                <i class="anticon anticon-logout"></i>
                                                                Thoát
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="table-responsive">
                    <table class="table table-hover e-commerce-table">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã Category</th>
                                <th>Tên Category</th>
                                <th>Ngày cập nhật</th>
                                <th>Cập nhật lần cuối</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody id="showdata">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var timeout;
            function startTimer() {
            timeout = setTimeout(function() {
                Swal.fire({
                    title: "Quá thời gian truy cập!",
                    text: "Bạn sẽ được chuyển hướng về trang chủ.",
                    icon: "warning",
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Đồng ý"
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('@Url.Action("ClearSession", "Home")', { method: 'POST' })
                        .then(() => {
                            window.location.href = '@Url.Action("TrangChu", "Home")';
                        })
                        .catch(() => {
                            window.location.href = '@Url.Action("TrangChu", "Home")';
                        });
                    }
                });
            }, 3000);
        }
            function resetTimer() {
                clearTimeout(timeout);
                startTimer();
            }

            document.addEventListener('DOMContentLoaded', (event) => {
                startTimer();
            });

            document.addEventListener('mousemove', resetTimer);
            document.addEventListener('keypress', resetTimer);
            document.addEventListener('click', resetTimer);
</script>
@Scripts.Render("~/bundles/jquery")